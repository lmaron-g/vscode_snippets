	/* cd /Users/marshtupa/Library/Application\ Support/Code/User/snippets */

	"TODO list": {
		"prefix": "td",
		"body": [
			"/*\n** TODO: $1\n*/"
		],
		"description": "add todo list"
	},

	"while": {
		"prefix": "wi",
		"body": [
			"while (i < ${1:count})",
			"{\n\t$2\n}"
		],
		"description": "while snippet"
	},
	
	"ft_printf();": {
		"prefix": "pf",
		"body": [
			"ft_printf(\"%$1\\n\", $2);"
		],
		"description": "ft_printf() snippet"
	},

	"comment": {
		"prefix": "///",
		"body": [
			"/*\n$1\n*/"
		],
		"description": "set comment"
	},

	"debug": {
		"prefix": "sos",
		"body": [
			"ft_printf(\"SOS\\n\");"
		],
		"description": "otsos"
	},

	"int i": {
		"prefix": "i",
		"body": [
			"int\ti;\n\ni = 0;"
		],
		"description": "int i;"
	}
}
